# see http://editorconfig.org

# Top-level config
root = true


# All files
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100


# YAML files
[*.{yml,yaml}]
indent_size = 2


# Windows scripts
[*.{bat,cmd,ps1}]
end_of_line = crlf
